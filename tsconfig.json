{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"jsx": "react-native",
		"paths": {
			"@/*": ["./*"]
		},
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"nativewind-env.d.ts",
		"types/images.d.ts",
		"global.css"
	],
	"exclude": ["node_modules", "dist", "convex/_generated", "*.test.ts", "*.test.tsx"]
}
